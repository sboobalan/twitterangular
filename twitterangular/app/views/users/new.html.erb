    <div id="bgimage">
      <p>Welcome to Infi_Twitter.<br>Ready to Join?</p>
      <div id="reg">
        <form name="signupform" ng-app="signup" ng-controller="signupctrl" action="/users" method="POST" enctype="multipart/form-data" accept-charset="UTF-8">
