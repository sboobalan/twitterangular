            Email: <br><input type="email" id="email" name="user[email]" placeholder="Email ID" ng-blur="checkmail()"  ng-model="email" required>
            <span id="statusmail" ng-model="statusmail" class="fieldspan">
              {{statusmail}}
            </span>
          </div>
          <div class="field">
            Profile Picture: <br><input type="file" id="dp" name="user[dp]">
          </div>

          <div class="actions row">
            <span class="column">
              <input type="submit" value="Register">
            </span>
            <span class="column">
              <input type="button" value="Back" onclick='window.location.href="/users"'>
