          <div class="field">
            Name:  <br> <input type="text" name="user[name]" placeholder="Name" ng-model="name" required>
          </div>

          <div class="field">
            Username: <br><input type="text" name="user[username]" ng-model="uname" placeholder="User name" ng-blur="check()" ng-focus="remove()"  required>
